rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    // - Any authenticated user can read profiles (for leaderboard)
    // - Users can only write their own profile
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // Test results - users can only access their own test results
    match /testResults/{resultId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Test contents - users can only access their own test content
    match /testContents/{contentId} {
      // Allow reading if document doesn't exist (for checking old tests) OR if user owns it
      allow get: if isAuthenticated() && 
                    (resource == null || resource.data.userId == request.auth.uid);
      // Allow querying only user's own content
      allow list: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // No delete allowed - maintain history for retries
      allow delete: if false;
    }

    // User labels - users can only access their own labels
    match /userLabels/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }

    // Time trial best times - users can only access their own best times
    // Document ID format: userId_trialId
    match /timeTrialBestTimes/{bestTimeId} {
      // Allow get (single document read) if authenticated and either:
      // - Document doesn't exist yet (resource == null), OR
      // - Document belongs to the authenticated user
      allow get: if isAuthenticated() &&
                    (resource == null || resource.data.userId == request.auth.uid);
      // Allow list (query operations) only if document belongs to the authenticated user
      allow list: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Allow create if the document is being created by the owner
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Allow update if the user owns the document
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      // Allow delete if the user owns the document (for migration/reset purposes)
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
  }
}
